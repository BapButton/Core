
<MudDrawer @bind-Open="DrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
    <MudPaper Width="250px" Class="py-3" Square="true">
        <MudNavMenu>

            <MudNavLink Match="NavLinkMatch.All" Href="/">Games</MudNavLink>
            @foreach (var item in LoadedAddonHolder.MainMenuItems)
            {
                <MudNavLink tooltip Href="@item.Path"><MudTooltip Text="@item.MouseOver">@item.DisplayedLabel</MudTooltip></MudNavLink>

            }
        </MudNavMenu>
    </MudPaper>
</MudDrawer>

@code {
    [Parameter]
    public bool DrawerOpen { get; set; }
}
